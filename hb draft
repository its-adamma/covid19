contact_name = []
contact_number = []
contact_address = []

#Define menu function
def menu():
  global user_input
  if len(contact_name) <= 0:
    print("There are currently no contacts\n")
    print("â€¢ For hosptial or organiations in need, type 'ğ'\nâ€¢ For interest in volunteering, type 'ğ•'")
		
  elif len(contact_name) > 0:
    print("There is currently", len(contact_name), "contact(s)")
    print("\nâ€¢ For hosptial or organiations in need, type 'ğ'")
    print("\nFor interest in volunteering, type 'ğ•'")
    print("To delete submission type 'delete'")
    print("To search contacts type 'S'")
    print("To view Menu type 'M'")
    
  if len(contact_name) == 0:
    while True:
      user_input = input("\nSelection:")
      user_input = user_input.lower()
      if user_input == "n" or "v":
        break
      else:
        print("âš ï¸ Oops! Not a vaild command. Please try again.")
  
  if len(contact_name) > 0:
    while True:
      user_input = input("Please type a listed command:")
      user_input = user_input.lower()
      if user_input == "n" or "contacts" or "delete" or "search" or "menu" or "v":
        break
      else:
        print("âš ï¸ Oops! Not a vaild command. Please try again.")
    
# Need function for hosiptals and organizations
def need():
  user_input_add_name = input("\nPlease enter hospital or organizaton name:\nâ€¢ ")
  contact_name.append(user_input_add_name)
  while True:
    user_input_add_number = input("\nPlease enter phone number:\nâ€¢ ")
    if user_input_add_number.isdigit() == True and len(user_input_add_number) == 10:
      contact_number.append(user_input_add_number)
      break
    else:
      print("âš ï¸ Oops! Please enter 10 digits")
  while True:
    user_input_add_email = input("\nPlease enter email address:\nâ€¢ ")
    if "@" and "." in user_input_add_email:
      contact_address.append(user_input_add_email)
      break
    else:
      print("âš ï¸ Oops! Please enter a vaild email address")

# volunteer function
def volunteer():
  user_input_add_name = input("\nPlease enter full name:\nâ€¢ ")
  contact_name.append(user_input_add_name)
  while True:
    user_input_add_number = input("\nPlease enter phone number:\nâ€¢ ")
    if user_input_add_number.isdigit() == True and len(user_input_add_number) == 10:
      contact_number.append(user_input_add_number)
      break
    else:
      print("âš ï¸ Oops! Please enter 10 digits")
  while True:
    user_input_add_email = input("\nPlease enter email address:\nâ€¢ ")
    if "@" and "." in user_input_add_email:
      contact_address.append(user_input_add_email)
      break
    else:
      print("âš ï¸ Oops! Please enter a vaild email address")
			
